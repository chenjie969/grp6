<%@ page language="java" import="java.util.*" pageEncoding="UTF-8"%>

<div class="modal fade bs-example-modal-sm" id="listSetColumnsModule" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" data-backdrop="static" data-keyboard="false">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">自定义列表栏目</h4>
      </div>
      <div class="modal-body">
   		<form class="form-horizontal" role="form" id="listSetColumnsForm">
			<input type="hidden" name="listBH" id="listBH" value="">
			<div class="form-group " >
				<div class="col-sm-5">
                    <input type="hidden" id="choosableColumns" name="choosableColumns">
                    <input type="hidden" id="choosableColumnNames" name="choosableColumnNames">
					<label for="OrderContent" style="font-weight:bold;">可选字段</label>
					<select class="form-control ztb_choosable" id="choosableColumnsSelect" multiple="multiple" style="height:300px">
					</select>
				</div> 
				
				<div class="col-sm-2 center" style = "margin-top:100px">
					<!-- <i class="icon-fast-backward" ></i><br>
					<i class="icon-forward" ></i><br> -->
					<button class="btn btn-sm" type="button" id="add">
						<i class="icon-double-angle-right bigger-110" ></i>
					</button>
					<br><br>
					<button class="btn btn-sm" type="button" id="remove">
						<i class="icon-double-angle-left bigger-110" ></i>
					</button>
					<br>

            	</div>
            	
				<div class="col-sm-5">
					<input type="hidden" id="selectedColumns" name="selectedColumns">
					<input type="hidden" id="selectedColumnNames" name="selectedColumnNames">
					<label for="OrderContent" style="font-weight:bold;">已选字段</label>
					<select class="form-control ztb_selected" id="selectedColumnsSelect" multiple="multiple" style="height:300px">
					</select>
            	</div>
            	<div class="col-sm-offset-7" style="margin-top:345px">
					&nbsp;&nbsp;&nbsp;
					<button type="button" class="btn btn-xs btn-warning" id="btn_moveTop"><i class='icon-chevron-up'></i>置顶</button>
					<button type="button" class="btn btn-xs" id="btn_moveUp"><i class='icon-arrow-up'></i>上移</button>
					<button type="button" class="btn btn-xs" id="btn_moveDown"><i class='icon-arrow-down'></i>下移</button>
					<button type="button" class="btn btn-xs btn-warning" id="btn_moveBottom"><i class='icon-chevron-down'></i>置底</button>
				</div>
			</div>
			
		</form>
	  </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary btn_submit"><i class='icon-ok bigger-110'></i>保存</button>
        <button type="button" class="btn btn-default btn_reset"><i class='icon-repeat bigger-110'></i>重置</button>
        <button type="button" class="btn btn-default" data-dismiss="modal"> <i class='icon-remove bigger-110'></i>关闭</button>
      </div>
    </div>
  </div>
</div>


