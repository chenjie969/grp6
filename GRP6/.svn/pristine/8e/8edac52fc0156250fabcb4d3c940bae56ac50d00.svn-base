<%@ page language="java" import="java.util.*" pageEncoding="UTF-8"%>
<div class="modal fade bs-example-modal-sm" id="viewPostinfo" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">查看岗位</h4>
      </div>
      <div class="modal-body">
		<div class="row">
			<div class="col-sm-offset-1">
			<h5 class="col-sm-12">上级岗位名称：<span class="grey ztb_view_parentPostName"></span></h5>
			<h5 class="col-sm-12">岗位名称：<span class="grey ztb_view_postName"></span></h5>
			<h5 class="col-sm-12">岗位人员：<span class="grey ztb_view_post_User"></span></h5>
		   <!-- <h5 class="col-sm-12">系统自带还是用户自定义：<span class="grey ztb_view_contentType"></span></h5>
		   <h5 class="col-sm-12">统一编码：<span class="grey ztb_view_unificationID"></span></h5> -->
		   <!-- <h5 class="col-sm-12">是否删除：<span class="grey ztb_view_isdelete"></span></h5> -->
		   </div>
		</div>
	</div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal"> <i class='icon-remove bigger-110'></i>关闭</button>
      </div>
    </div>
  </div>
</div>
